<div class="container">
  <%= simple_form_for(@reptile) do |f| %>
        <br>
        <h2>Tell us about your reptile <i class="fas fa-dragon"></i></h2>
        <%= f.input :name, class: 'form-control' %>
        <%= f.input :species, class: 'form-control' %>
        <%= f.input :weight, class: 'form-control' %>
        <%= f.input :age, class: 'form-control' %>
        <%= f.input :size, class: 'form-control' %>
        <%= f.input :price, class: 'form-control' %>
        <%= f.input :description, class: 'form-control' %>

        <br>
        <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>
